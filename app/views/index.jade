extends layout

block content
  section.row(ng-controller="ProjectsController")
    section.span5.projects(ng-init="find()")
      h1
        | Projects ({{projects.length}})
        a(ng-href='#!/projects/new', style='float: right;') Add yours
      ul.unstyled
        li(ng-repeat="project in projects", ng-class="{selected:isSelected(project)}")
          a(ng-href="#!/projects/{{project._id}}") {{project.title}}
          br
          | {{project.short}}
    project.span7(ng-view)
  script(type="text/javascript").
    window.user = !{user};


